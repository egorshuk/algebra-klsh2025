\counterwithin*{example}{section}
\counterwithin{equation}{section}

\newenvironment{remark}[1][]{%
    \noindent\begin{minipage}{\linewidth}%
        \footnotesize
        \begin{rem}[#1]%
        }{%
        \end{rem}%
    \end{minipage}%

    \vspace{0.5em}%
}
\newenvironment{practice}[1][]{%
    \noindent\begin{minipage}{\linewidth}%
        \footnotesize
        \begin{prac}[#1]%
        }{%
        \end{prac}%
    \end{minipage}%

    \vspace{0.5em}%
}

