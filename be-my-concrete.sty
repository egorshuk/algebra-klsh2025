\counterwithin*{prac}{section}
\theoremstyle{remark}
\newtheorem*{remark}{Замечание}
\newtheorem{example}{Пример}
\counterwithin*{example}{section}
\counterwithin{equation}{section}

\newenvironment{practice}[1][]{%
